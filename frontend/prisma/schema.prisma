// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  id            String   @id @default(cuid())
  title         String
  description   String?
  type          String   @default("movie") // movie, series
  seasonNumber  Int?
  episodeNumber Int?
  s3Key         String   @unique
  s3Url         String
  thumbnailUrl  String?
  status        String   @default("pending") // pending, uploading, completed, failed
  releaseYear   Int?
  duration      Float?   // Duration in seconds
  resolution    String?  // e.g., 4K, 1080p
  genre         String?
  rating        String?  // e.g., PG, 18+
  fileSize      BigInt?
  mimeType      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([status])
  @@index([type])
}
