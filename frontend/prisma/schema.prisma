// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  id              String   @id @default(cuid())
  title           String
  description     String?
  type            String   @default("movie") // movie, series
  seasonNumber    Int?
  episodeNumber   Int?
  
  // Original upload tracking (optional, for source reference)
  s3KeySource     String?  // Original uploaded file key
  
  // Playback configuration
  playbackType    String   @default("mp4") // mp4 | hls
  s3KeyPlayback   String   @unique // HLS master manifest key OR MP4 key
  cloudfrontPath  String   // Same as s3KeyPlayback, used for URL construction
  
  // Legacy fields (kept for backward compatibility, phasing out)
  s3Key           String?  // Deprecated: will be removed
  s3Url           String?  // Deprecated: will be removed, compute at runtime instead
  
  thumbnailUrl    String?
  status          String   @default("pending") // pending, uploading, completed, failed
  releaseYear     Int?
  duration        Float?   // Duration in seconds
  resolution      String?  // e.g., 4K, 1080p
  genre           String?
  rating          String?  // e.g., PG, 18+
  fileSize        BigInt?
  mimeType        String?
  
  // Phase 2 â€” linking to global catalog
  tmdbId          String?  // The TMDb movie/tv ID, nullable for non-catalog items
  seriesTitle     String?  // For TV episodes: the parent series name for grouping
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([status])
  @@index([type])
  @@index([tmdbId])
  @@index([playbackType])

  // Relations
  watchHistory WatchHistory[]
  favorites    Favorite[]
}

model User {
  id                String   @id @default(cuid())
  email             String   @unique
  username          String   @unique
  password          String
  avatar            String?
  role              String   @default("user") // "user" or "admin"
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  watchHistory      WatchHistory[]
  favorites         Favorite[]
  analyticsEvents   AnalyticsEvent[]

  @@index([email])
  @@index([username])
  @@index([role])
}

model WatchHistory {
  id                String   @id @default(cuid())
  userId            String
  videoId           String
  videoTitle        String
  videoPoster       String?
  watchedAt         DateTime @default(now())
  duration          Float?   // Duration watched in seconds
  totalDuration     Float?   // Total video duration in seconds
  completionPercent Float?   // 0-100
  isCompleted       Boolean  @default(false)

  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  video             Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([videoId])
  @@index([watchedAt])
  @@unique([userId, videoId], name: "userVideoUnique")
}

model Favorite {
  id                String   @id @default(cuid())
  userId            String
  videoId           String
  videoTitle        String
  videoPoster       String?
  addedAt           DateTime @default(now())

  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  video             Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([videoId])
  @@unique([userId, videoId], name: "userFavoriteUnique")
}

model AnalyticsEvent {
  id                String   @id @default(cuid())
  userId            String
  eventType         String   // "watch_started", "watch_completed", "favorite_added", "favorite_removed", "search"
  videoId           String?
  videoTitle        String?
  metadata          String?  // JSON string for additional data
  createdAt         DateTime @default(now())

  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([eventType])
  @@index([createdAt])
}
